{
    "security.workspace.trust.untrustedFiles": "open",
    "files.insertFinalNewline": true,
    "editor.tabSize": 4,
    "files.trimTrailingWhitespace": true,
    "editor.formatOnPaste": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "files.autoSave": "afterDelay",
    "debug.console.fontSize": 12,
    "terminal.integrated.fontSize": 12,
    "explorer.confirmDelete": false,
    "editor.tabCompletion": "onlySnippets",
    "workbench.iconTheme": "file-icons",
    "jupyter.askForKernelRestart": false,
    "explorer.confirmDragAndDrop": false,
    "editor.renderWhitespace": "none",
    "window.menuBarVisibility": "toggle",
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "latex-workshop.bibtex-format.tab": "4 spaces",
    "editor.detectIndentation": false,
    "notebook.lineNumbers": "on",
    "breadcrumbs.enabled": false,
    "notebook.globalToolbar": false,
    "editor.fastScrollSensitivity": 10,
    "customizeUI.activityBar": "regular",
    "customizeUI.activityBarHideSettings": true,

    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "markdown-pdf.convertOnSave": true,
    "markdown-pdf.scale": 1.3,
    "window.zoomLevel": 2,
    "workbench.editor.untitled.hint": "hidden",
    "markdown-pdf.breaks": true,
    "markdown-pdf.displayHeaderFooter": false,
    "code-runner.runInTerminal": true,
    "liveshare.notebooks.allowGuestExecuteCells": true,
    "git.autofetch": true,
    "spellright.addToSystemDictionary": true,
    "markdown-preview-enhanced.chromePath": "/usr/bin/google-chrome",
    "workbench.statusBar.visible": false,
    "spellright.language": [],
    "spellright.documentTypes": [
        "latex",
        "plaintext"
    ],
    "audioCues.lineHasInlineSuggestion": "off",
    "editor.suggest.showColors": false,
    "editor.suggest.showConstructors": false,
    "editor.suggest.showClasses": false,
    "editor.suggest.showDeprecated": false,
    "editor.suggest.showCustomcolors": false,
    "editor.suggest.showModules": false,
    "editor.suggest.showOperators": false,
    "editor.suggest.showReferences": false,
    "editor.suggest.showStructs": false,
    "editor.suggest.showValues": false,
    "editor.suggest.showUnits": false,
    "editor.suggest.showTypeParameters": false,
    "editor.suggest.showUsers": false,
    "editor.suggest.showProperties": false,
    "editor.suggest.showIssues": false,
    "editor.suggest.showEvents": false,
    "editor.suggest.showEnumMembers": false,
    "editor.suggest.showEnums": false,
    "editor.suggest.showFields": false,
    "editor.suggest.showMethods": false,
    "editor.parameterHints.enabled": false,
    "editor.suggest.showKeywords": false,
    "path-intellisense.autoTriggerNextSuggestion": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "path-intellisense.autoSlashAfterDirectory": true,
    "editor.quickSuggestions": {
        "comments": "off",
        "strings": "off",
        "other": "inline"
    },
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Solarized Light (no bold)",
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#e788ff7c", //Currently SELECTED text
        "editor.selectionHighlightBackground": "#ffae005b", //Same content as selection
        "editor.findMatchBackground": "#00cc44a8", //Current SEARCH MATCH
        "editor.findMatchHighlightBackground": "#ff7b00a1", //Other SEARCH MATCHES
    },

}
